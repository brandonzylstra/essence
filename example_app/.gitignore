# See https://help.github.com/articles/ignoring-files for more about ignoring files.

# Ignore bundler config and installed gems
/.bundle
/vendor/bundle

# Ignore the default SQLite database
/db/*.sqlite3
/db/*.sqlite3-*

# Ignore all logfiles and tempfiles
/log/*
/tmp/*
!/log/.keep
!/tmp/.keep

# Ignore pidfiles, but keep the directory
/tmp/pids/*
!/tmp/pids/
!/tmp/pids/.keep

# Ignore storage (uploaded files in development and any SQLite databases)
/storage/*
!/storage/.keep
/tmp/storage/*
!/tmp/storage/
!/tmp/storage/.keep

# Ignore master key for decrypting credentials and more
/config/master.key
/config/credentials/*.key

# Ignore all environment files (dotenv)
/.env*
!/.env.example

# Ignore precompiled assets
/public/assets
/public/packs
/public/packs-test

# Ignore Sprockets cache
/tmp/cache/assets

# Ignore bootsnap cache
/tmp/cache/bootsnap*

# Ignore Spring files
/spring/*.pid

# Ignore yarn error logs
yarn-error.log

# Ignore node modules and yarn cache
/node_modules
/yarn.lock.orig
.yarn-integrity

# Ignore JavaScript builds
/app/assets/builds/*
!/app/assets/builds/.keep

# Ignore CSS builds
/app/assets/stylesheets/application.tailwind.css

# Atlas-specific ignores
/db/atlas_migrations/*
!/db/atlas_migrations/.keep
/db/schema.hcl

# JAML generated files
*.hcl.tmp
*.yaml.tmp

# IDE and editor files
/.vscode
/.idea
*.swp
*.swo
*~

# OS generated files
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db
desktop.ini

# RuboCop cache
.rubocop-*

# Coverage reports
/coverage/

# Test artifacts
/test/reports/
/test/coverage/

# Byebug history
.byebug_history

# Pry history
.pry_history

# RSpec failure tracking
.rspec_status

# Docker files (if using Docker)
.dockerignore

# Kamal deployment files
.kamal/secrets

# Yarn error logs
yarn-error.log

# Local configuration overrides
/config/database.yml.local
/config/application.yml.local

# Ignore encrypted secrets
/config/secrets.yml.enc

# Ignore any backup files
*.bak
*.backup
*.old

# Ignore any local configuration
/config/local.yml
/config/*.local.yml